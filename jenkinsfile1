	       script {
	           try {
		  rc = command 'sfcc-ci client:auth ${sfcc_ClientId} ${sfcc_Client_Secret}'
		  if (rc != 0) {
                   error 'Salesforce dev hub org authorization failed.'
                     }
		    }catch (e) {   
                           currentBuild.result="FAILED"
                           throw e
                    }  
		}  
	    }	
